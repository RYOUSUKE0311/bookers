<div>

<h1>Books</h1>

<table class="table">
  <tr>
      <th>title</th>
      <th>body</th>
      <th></th>
      <th></th>
      <th></th>
  </tr>

<tbody>
<% @bookers.each do |booker| %>
<tr>
  <td><%= booker.title %></td>
  <td><%= booker.body %></td>
  <td><%= link_to"Show", book_path(booker.id) %></td>
  <td><%= link_to"Edit", edit_book_path(booker.id) %></td>
  <td><%= link_to"Destroy", book_path(booker.id), method: :delete %></td>
</tr>
<% end %>
</tbody>
</table>

<h2>New book</h2>
<% if @booker.errors.any? %>
  <%= @booker.errors.count %>件のエラーが発生しました
  <ul>
    <% @booker.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @booker, method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

 <%= f.submit 'Create Book' %>
<% end %>